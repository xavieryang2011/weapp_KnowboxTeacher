.exam-container {
  width: 100%;
  height: 100%;
} 
.exam-top-container{
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
}
.classInfo{
  display: flex;
  flex-direction: column;
}
.section{
  display: flex;
  flex-direction:row;
  margin-left:30rpx;
}
.class-picker{
  font-size: 40rpx;
  font-weight:700 ;
}
.publisher-picker{
  font-size: 30rpx;
}
.img{
  width: 24rpx;
  height: 24rpx;
  margin-left: 5rpx;
}
.class-num{
  margin-left: 30rpx;
  font-size: 30rpx;
  margin-top: 10rpx;
  color:#999999;
}
.publisher{
  display: flex;
  flex-direction: row;
  margin-left: 200rpx;
}
.listView{
  background-color: #eef0f4;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.listView-item-class{
  display: flex;
  height: 70rpx;
  margin-left: 30rpx;
  flex-direction: row;
  margin-top: 10rpx;
}
.listView-item-title{
  width: 300rpx;
  margin-top: 10rpx;
}
.arrow-right-icon{
  width:30rpx;
  height:30rpx;
  margin-left: 300rpx;
  margin-top: 20rpx;
}
.listView-item-underline{
  height: 10rpx;
  margin-left: 30rpx;
}
