.exam-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
} 
.exam-top-container{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.classInfo{
  display: flex;
  flex-direction: column;
}
.section{
  display: flex;
  flex-direction:row;
  margin-left: 30rpx;
  
}
.class-picker{
  font-size: 40rpx;
  font-weight:700 ;
}
.publisher-picker{
  font-size: 30rpx;
}
.img{
  width: 24rpx;
  height: 24rpx;
  margin-left: 5rpx;
}
.class-num{
  margin-left: 30rpx;
  font-size: 30rpx;
  margin-top: 10rpx;
  color:#999999;
}
.publisher{
  display: flex;
  flex-direction: row;
}
.swiper-class{
  display: flex;
  width: 100%;
  height: 100%;
  background-color: #eef0f4;
  margin-top: 15rpx;
}
.swiper {
    height: 421.5rpx;
}
.listView{
  background-color: #eef0f4;
  height: 100%;
}
.listView-item-class{
  display: flex;
  height: 50rpx;
  margin-left: 30rpx;
  flex-direction: row;
  margin-top: 10rpx;
}
.listView-item-title{
  width: 300rpx;
  margin-top: 10rpx;
}
.arrow-right-icon{
  width:30rpx;
  height:30rpx;
  margin-left: 300rpx;
  margin-top: 20rpx;
}
.listView-item-divider{
  height:10rpx;
  width:100%;
  color: #999999;
}
.listView-item-underline{
  height: 10rpx;
  width: 100%;
  margin-left: 30rpx;
}
