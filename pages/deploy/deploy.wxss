/* pages/deploy/deploy.wxss */
page{
  height: 100%;
  width:100%;
}
.icon-right{
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
.test-name{
  padding-left: 20rpx;
  padding-right: 20rpx;
  height: 100rpx;
  flex-direction: row;
  display: flex;
  align-items: center;
}
.title{
  font-weight: 70rpx;
  width: 60%
}
.text{
  font-size: 30rpx;
  color: grey;
  width: 40%;
  text-align: right;
}
.icon-class{
  width: 80rpx;
  height: 80rpx;
}
.content{
  padding-left: 20rpx;
  padding-right: 20rpx;
  flex-direction: row;
  display: flex;
  height: 150rpx;
  width: 100%;
  align-items: center;
}
.content-text{
  margin-left: 15rpx;
  display: flex;
  flex-direction: column;
  width: 70%;
}
.content-text-top{
  font-size: 40rpx;
}
.content-text-bottom{
  font-size: 30rpx;
  color: grey;
}
.scroll-view{
  width: 100%;
  height: 1050rpx;
}
.bottom{
  width: 100%;
  height: 8%;
  bottom: 0rpx;
  position: fixed;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.button{
  background-color: #64dcdc;
  width: 80%;
  border-radius: 8rpx;
  color: white;
  margin-top: 10rpx;
  height: 80rpx;
}
